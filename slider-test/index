<body>
  <div class="slider">
    <div class="top-overlay">nzk.com.ua</div>
    <div class="slides">
      <img src="domenika_final.jpg" alt="Доменіка">
      <img src="karina_bunk_final.jpg" alt="Каріна">
      <img src="oriella_final_fixed.jpg" alt="Орієлла">
      <img src="simona_final.jpg" alt="Сімона">
    </div>
    <div class="controls">
      <button class="btn" onclick="prevSlide()">◀</button>
      <button class="btn" onclick="togglePlay()" id="playBtn">■</button>
      <button class="btn" onclick="nextSlide()">▶</button>
    </div>
  </div>

  <script>
    let currentIndex = 0;
    const slides = document.querySelector('.slides');
    const totalSlides = slides.children.length;
    let autoPlay = true;
    let interval = setInterval(nextSlide, 5000);

    function showSlide(index) {
      if (index < 0) index = totalSlides - 1;
      if (index >= totalSlides) index = 0;
      currentIndex = index;
      slides.style.transform = `translateX(${-index * 100}%)`;
    }

    function nextSlide() {
      showSlide(currentIndex + 1);
    }

    function prevSlide() {
      showSlide(currentIndex - 1);
    }

    function togglePlay() {
      const btn = document.getElementById('playBtn');
      if (autoPlay) {
        clearInterval(interval);
        btn.textContent = '▶';
      } else {
        interval = setInterval(nextSlide, 5000);
        btn.textContent = '■';
      }
      autoPlay = !autoPlay;
    }
  </script>
</body>
</html>
