  <title>NZK Slider Test</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #f4f4f4;
    }
    .slider {
      position: relative;
      max-width: 800px;
      margin: auto;
      overflow: hidden;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }
    .slides {
      display: flex;
      transition: transform 0.8s ease-in-out;
    }
    .slides img {
      width: 100%;
      flex-shrink: 0;
    }
    /* Кнопки */
    .controls {
      position: absolute;
      bottom: 15px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      gap: 15px;
    }
    .btn {
      background: rgba(0,0,0,0.6);
      color: #fff;
      border: none;
      padding: 8px 12px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 18px;
    }
    .btn:hover {
      background: rgba(0,0,0,0.8);
    }
    /* Верхній шар з сайтом */
    .top-overlay {
      position: absolute;
      top: 10px;
      left: 50%;
      transform: translateX(-50%);
      background: rgba(0,0,0,0.5);
      color: #fff;
      padding: 4px 10px;
      border-radius: 6px;
      font-size: 14px;
    }
